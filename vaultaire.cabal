stability:           experimental

build-type:          Simple

source-repository    head
  type:              git
  location:          git@github.com:anchor/vaultaire.git


library
  hs-source-dirs:    lib
  default-language:  Haskell2010

  exposed-modules:   Vaultaire.Daemon,
                     Vaultaire.Types,
                     Vaultaire.RollOver,
                     Vaultaire.Broker,
                     Vaultaire.DayMap,
                     Vaultaire.OriginMap,
                     Vaultaire.Util,
                     Vaultaire.Writer,
                     Vaultaire.Reader,
                     Vaultaire.ReaderAlgorithms,
                     Vaultaire.InternalStore,
                     Vaultaire.ContentsServer,
                     Marquise.Client,
                     Marquise.Server,
                     Marquise.Types,
                     Marquise.IO

  other-modules:     Vaultaire.Classes.WireFormat,
                     Vaultaire.Types.Address,
                     Vaultaire.Types.ContentsOperation,
                     Vaultaire.Types.ContentsResponse,
                     Vaultaire.Types.SourceDict,
                     Vaultaire.Types.ReadStream,
                     Vaultaire.Types.WriteResult,
                     Vaultaire.Types.ContentsListBypass

  build-depends:     base >=3 && <5,
                     bytestring,
                     text,
                     time,
                     mtl,
                     transformers,
                     semigroups,
                     containers,
                     primitive,
                     -- parsers does not build
                     attoparsec <0.12,
                     bifunctors,
                     spool,
                     pipes-parse,
                     hslogger,
                     directory,
                     lens,
                     pipes,
                     pipes-concurrency,
                     unix,
                     hashable,
                     unordered-containers,
                     vector,
                     vector-algorithms,
                     zeromq4-haskell,
                     exceptions,
                     packer,
                     stm,
                     async,
                     random,
                     locators >= 0.2.4,
                     siphash,
                     blaze-builder,
                     rados-haskell >= 3

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto


executable vault
  hs-source-dirs:    src
  main-is:           Vault.hs
  default-language:  Haskell2010

  build-depends:     base >=3 && <5,
                     bytestring,
                     zeromq4-haskell,
                     optparse-applicative,
                     trifecta,
                     directory,
                     hslogger,
                     vaultaire

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto


