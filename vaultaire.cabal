build-type:          Custom

source-repository    head
  type:              git
  location:          git@github.com:anchor/vaultaire.git

flag network-uri
   description: Get Network.URI from the network-uri package
   default: True

library
  hs-source-dirs:    lib
  default-language:  Haskell2010

  exposed-modules:   Vaultaire.Daemon,
                     Vaultaire.RollOver,
                     Vaultaire.Broker,
                     Vaultaire.DayMap,
                     Vaultaire.OriginMap,
                     Vaultaire.Writer,
                     Vaultaire.Reader,
                     Vaultaire.ReaderAlgorithms,
                     Vaultaire.InternalStore,
                     Vaultaire.Contents,
                     Vaultaire.Profiler

  if flag(network-uri)
     build-depends: network-uri >= 2.6, network >= 2.6
  else
     build-depends: network-uri < 2.6, network < 2.6
  build-depends:     base >=4.7.0.1 && <5,
                     bytestring,
                     blaze-markup <= 0.6.2,
                     random,
                     zeromq4-haskell,
                     containers,
                     pipes-parse,
                     pipes,
                     mtl,
                     transformers,
                     unordered-containers,
                     primitive,
                     vector-algorithms,
                     vector,
                     spool,
                     packer,
                     time,
                     pipes-concurrency,
                     async,
                     stm,
                     semigroups,
                     hslogger >= 1.2.4,
                     vaultaire-common >= 2.8.2,
                     text,
                     unix,
                     unix-time,
                     rados-haskell >= 3.0.3

  ghc-options:       -O2
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto


