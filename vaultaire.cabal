cabal-version:       >= 1.10
name:                vaultaire
version:             2.1.0
synopsis:            Data vault for metrics
license:             BSD3
author:              Anchor Engineering <engineering@anchor.com.au>
maintainer:          Anchor Engineering <engineering@anchor.com.au>
copyright:           Â© 2013-2014 Anchor Systems, Pty Ltd and Others
category:            Other
tested-with:         GHC == 7.6
stability:           experimental

build-type:          Custom

source-repository    head
  type:              git
  location:          git@github.com:anchor/vaultaire.git


library
  hs-source-dirs:    lib
  default-language:  Haskell2010

  exposed-modules:   Vaultaire.Daemon,
                     Vaultaire.RollOver,
                     Vaultaire.Broker,
                     Vaultaire.DayMap,
                     Vaultaire.OriginMap,
                     Vaultaire.Writer,
                     Vaultaire.Reader,
                     Vaultaire.ReaderAlgorithms,
                     Vaultaire.InternalStore,
                     Vaultaire.Contents

  build-depends:     base >=3 && <5,
                     bytestring,
                     random,
                     zeromq4-haskell,
                     containers,
                     pipes-parse,
                     pipes,
                     mtl,
                     unordered-containers,
                     primitive,
                     vector-algorithms,
                     vector,
                     spool,
                     packer,
                     time,
                     pipes-concurrency,
                     async,
                     stm,
                     semigroups,
                     hslogger >= 1.2.4,
                     vaultaire-common >= 2.1.0,
                     text,
                     rados-haskell >= 3.0.3

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto


executable vault
  hs-source-dirs:    src
  main-is:           Vault.hs
  default-language:  Haskell2010

  build-depends:     base >=3 && <5,
                     bytestring,
                     rados-haskell,
                     zeromq4-haskell,
                     optparse-applicative,
                     trifecta >= 1.4.3,
                     directory,
                     marquise,
                     containers,
                     vaultaire-common >= 2.1.0,
                     pipes,
                     hslogger >= 1.2.4,
                     async,
                     unix,
                     vaultaire

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto

